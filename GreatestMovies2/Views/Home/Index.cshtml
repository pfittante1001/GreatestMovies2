@{
    ViewBag.Title = "Home Page";
}

<div class="carosel row container-fluid">
    <div id="carInfo col-md-12 col-sm-6">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">

                    <img src="~/images/alien.jpg" />
                    <div class="carousel-caption">
                        <h3>Aliens</h3>
                        <p>LA is always so much fun!</p>
                    </div>
                </div>

                <div class="item">

                    <img src="~/images/matrix.jpg" />
                    <div class="carousel-caption">
                        <h3>Matirx</h3>
                        <p>Thank you, Chicago!</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/images/obrother.jpg" />
                    <div class="carousel-caption">
                        <h3>O Brother Where Art Thou</h3>
                        <p>We love the Big Apple!</p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<div class="row container-fluid" id="welcome">
    <div class="col-md-12">
        <h2 id="welcomeTitle">Greatest Movies Of All Time</h2>
        <p id="welcomeText">
            Lets look through our web site to see the greates movies of all time.  Our movies are ranked by box office earning. You can search by Actors or by movie.
        </p>
        <p><a class="btn btn-default" href='@Url.Action("Index", "Actors")'>Lets Go</a></p>
    </div>

</div>
